@model WebClient.Models.Requests.AddServiceRequest

<h2>Create Booking</h2>



<div class="row">
    <div class="col-md-6 offset-md-3">
        <h2>Đặt lịch </h2>
        <hr />
        <form asp-action="CreateDetail">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ServiceId" class="control-label">Dịch vụ khám</label>
                <select asp-for="ServiceId" class="form-control" asp-items="@ViewBag.Services"></select>
                <span asp-validation-for="ServiceId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Đặt lịch</button>
            </div>
        </form>
    </div>
</div>